void button_cb(Fl_Widget* obj, void*) {
	make_result();
}

void make_window() {

	Fl_Window *window = new Fl_Window(600, 300, "Search Engine");
	
	window->begin();
	
	window->color(FL_WHITE);
	
	Fl_Box *title = new Fl_Box(250, 20, 100, 100, "SEARCH NEWS");
	title->box(FL_NO_BOX);
	title->labelfont(FL_BOLD);
	title->labelsize(30);
	title->labeltype(FL_SHADOW_LABEL);
	
	Fl_Button *search = new Fl_Button(500, 100, 70, 30, "SEARCH");
	search->box(FL_UP_BOX);
	search->labelfont(FL_BOLD);
	search->labelsize(12);
	search->labelcolor(fl_rgb_color(162, 60, 20));
	
	Fl_Menu_Bar *pub = new Fl_Menu_Bar(100, 150, 80, 30);
	pub->menu(Publisher);
	Fl_Menu_Bar *mon = new Fl_Menu_Bar(210, 150, 60, 30);
	mon->menu(Month);
	Fl_Menu_Bar *yr = new Fl_Menu_Bar(300, 150, 50, 30);
	yr->menu(Year);
	
	Fl_Input *input = new Fl_Input(100, 100, 350, 30);
	input->value("Input your search query");
	
	window->end();
	
	search->callback((Fl_Callback*)button_cb);
	
	window->show();
}

void make_result() {

	Fl_Window *results = new Fl_Window(600, 600, "Search Results");
	
	results->begin();
	
	results->color(FL_WHITE);
	
	Fl_Box *box = new Fl_Box(100, 10, 100, 100, "SEARCH NEWS");
	box->box(FL_NO_BOX);
	box->labelfont(FL_BOLD);
	box->labelsize(30);
	box->labeltype(FL_SHADOW_LABEL);
	
	Fl_Box *best = new Fl_Box(80, 40, 100, 100, "Best Matched Documents");
	best->box(FL_NO_BOX);
	best->labelsize(17);
	
	Fl_Box *page = new Fl_Box(440, 40, 20, 30, "1");
	page->box(FL_DOWN_BOX);
	page->color(FL_WHITE);
	page->labelsize(12);
	
	Fl_Button *prev = new Fl_Button(380, 40, 50, 30, "PREV");
	prev->box(FL_UP_BOX);
	prev->labelsize(12);
	prev->labelcolor(fl_rgb_color(162, 60, 20));
	
	Fl_Button *next = new Fl_Button(470, 40, 50, 30, "NEXT");
	next->box(FL_UP_BOX);
	next->labelsize(12);
	next->labelcolor(fl_rgb_color(162, 60, 20));
	
	Fl_Slider *slider = new Fl_Slider(500, 300, 20, 200);

	results->end();
	results->show();
}

int main(int argc, char **argv) {
	make_window();
	return Fl::run();
}
